{
  "variable": {
    "PHPERFECT_TAG": {
      "default": "buildx-latest"
    }
  },
  "group": {
    "default": {
      "targets": ["app-prod", "app-dev"]
    }
  },
  "target": {
    "app-prod": {
      "cache-from": ["type=registry,ref=ghcr.io/wojciechem/phperfect-dev:latest"],
      "tags": ["ghcr.io/wojciechem/phperfect:${PHPERFECT_TAG}"],
      "target": "php-prod"
    },
    "app-dev": {
      "cache-from": ["type=registry,ref=ghcr.io/wojciechem/phperfect-dev:latest"],
      "tags": ["ghcr.io/wojciechem/phperfect-dev:${PHPERFECT_TAG}"],
      "target": "php-dev"
    }
  }
}